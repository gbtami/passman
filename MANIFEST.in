# Include the license file
include LICENSE.txt

# Include the desktop file
include freedesktop/passman.desktop

# Include the autostart desktop file
include freedesktop/passman-autostart.desktop

# Include schema file
include schema/com.idlecore.passman.gschema.xml

# Include GUI files
recursive-include gui *

# Include help files
recursive-include help *

# Include logo names cache file
include cache/logo_name_cache.bz2

# Include locale files
recursive-include locale *

# Exclude files that aren't required
# Glade keeps some backups and temporary files in this format
global-exclude *~ #*#
